<div class="contenedor">
  <div class="right-holder">
    <%= link_to new_company_supply_path(@company), :class => "circular-link" do %>
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    <% end %>
  </div>

  <% @supplies.each do |p| %>
    <div class="row">
      <div class="col-md-4">
        <div class="card">
          <p><%= p.name %></p>
          <p><%= p.description %></p>
          <p><%= p.amount %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

