<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div class="card">
      <%= form_for :session, url: login_path do |f| %>
          <div class="input-text">
            <%= f.label :mail, "e-mail" %>
            <%= f.email_field :mail, placeholder: "usuario@mail.com", :autofocus => true %>
          </div>
          <div class="input-text">
            <%= f.label :password, "Contraseña" %>
            <%= f.password_field :password, placeholder: "Contraseña" %>
          </div>
          <%= f.submit "Iniciar Sesión"%>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-offset-3 col-md-6">
      <div class="card">
        <div class="text-center">
          <%= link_to "Crear Usuario", new_user_path %>
        </div>
      </div>
  </div>
</div>