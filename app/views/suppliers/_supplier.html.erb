<div class="card with-options">
  <ul class="list-inline pull-right options">
    <li>
      <%= link_to edit_company_supplier_path(@company, supplier), {:remote => true} do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      <% end %>
    </li>
    <li>
      <%= link_to company_supplier_path(@company, supplier), method: 'delete' do %>
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
      <% end %>
    </li>
  </ul>
  <div class="info">
    <h4><%= supplier.name %></h4>
    <strong>Dirección: </strong><p><%= supplier.address %></p>
    <strong>Teléfono: </strong><p><%= supplier.phone %></p>
    <strong>e-mail: </strong><p><%= supplier.mail %></p>
    <strong>Descripción: </strong><p><%= supplier.description %></p>
  </div>
</div>