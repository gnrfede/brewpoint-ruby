<div class="right-holder">
  <%= link_to new_company_product_path(@company), :class => "circular-link" do %>
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
  <% end %>
</div>

<% @products.each do |p| %>
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <div class="card">
        <p><%= p.name %></p>
        <p><%= p.description %></p>
      </div>
    </div>
  </div>
<% end %>