<div class="row">
  <div class="col-md-offset-2 col-md-8">
  <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :mail %>
        <%= f.text_field :mail, placeholder: "usuario@mail.com", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <%= f.submit "Crear", class: "btn secondary-color" %>
  <% end %>
  </div>
</div>